name: Python CI (Lint & Token-Test)

on:
  pull_request:

jobs:
  lint-and-test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Install dependencies from requirements.txt
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install pylint

      - name: Run pylint with custom config
        run: |
          pylint --disable=E1101 $(git ls-files '*.py')

      - name: Run unit test: token_test.py only
        run: |
          PYTHONPATH=. pytest Tests/token_test.py
